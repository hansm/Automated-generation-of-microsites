<?xml version="1.0" encoding="UTF-8"?>
<widget name="OrganizationDeptInfoWidget" id="AutoMicrosite/OrganizationDeptInfoWidget"
		spec="1.0" width="640" height="480" jsClass="AutoMicrosite.Widget.OrganizationDeptInfo"
		xmlns:x="http://automicrosite.maesalu.com/OpenAjaxMetadataExtension"
		xmlns="http://openajax.org/metadata"
		x:min-width="100" x:max-width="9999"
		x:min-height="100" x:max-height="9999"
		sandbox="true"
	>

	<require type="javascript" src="OrganizationDeptInfo.js?v=2"></require>

	<content><![CDATA[
		<style type="text/css">
			#__WID__table {
				width: 100%;
				font-family: sans-serif;
			}
			#__WID__table thead {
				font-weight: bold;
			}
		</style>
		<div style="width:100%;height:100%;overflow: auto;">
			<table id="__WID__table">
				<thead>
					<tr>
						<td>Tax debt as reported by Estonian Tax and Customs Board</td>
						<td>Currency code of the tax debt sum</td>
						<td>Date and time of the last update of tax debt information</td>
						<td>The sum on active claims against the organization</td>
						<td>Currency code of the debt sum</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td id="__WID__taxDebtSum"></td>
						<td id="__WID__taxDebtCurrency"></td>
						<td id="__WID__taxDebtUpdateDate"></td>
						<td id="__WID__krdxDebtSum"></td>
						<td id="__WID__krdxDebtCurrency"></td>
					</tr>
				</tbody>
			</table>
		</div>
	]]></content>

	<topic name="AutoMicrosite.Table.OrganizationData.Dept" type="object" subscribe="true">
		<description>
			Show organization dept data in a table
		</description>
		<property name="taxDebtSum" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/taxDebtSum" />
		<property name="taxDebtCurrency" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/taxDebtCurrency" />
		<property name="taxDebtUpdateDate" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/taxDebtUpdateDate" />
		<property name="krdxDebtSum" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/krdxDebtSum" />
		<property name="krdxDebtCurrency" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/krdxDebtCurrency" />
	</topic>

	<categories>
		<category x:iri="http://schema.org/Table" />
    </categories>

</widget>