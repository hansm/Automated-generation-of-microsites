<?xml version="1.0" encoding="UTF-8"?>
<widget name="OrganizationInfoWidget" id="AutoMicrosite/OrganizationInfoWidget"
		spec="1.0" width="640" height="480" jsClass="AutoMicrosite.Widget.OrganizationInfo"
		xmlns:x="http://automicrosite.maesalu.com/OpenAjaxMetadataExtension"
		xmlns="http://openajax.org/metadata"
		x:min-width="100" x:max-width="9999"
		x:min-height="100" x:max-height="9999"
	>

	<require type="javascript" src="OrganizationInfo.js"></require>

	<content>
		<style type="text/css">
			#__WID__table {
				width: 100%;
			}
			#__WID__table .label {
				font-weight: bold;
			}
		</style>
		<div style="width:100%;height:100%;overflow: auto;">
			<table id="__WID__table">
				<tbody>
					<tr>
						<td class="label">Legal name</td>
						<td class="value" id="__WID__legalName"></td>
					</tr>
					<tr>
						<td class="label">Registration code</td>
						<td class="value" id="__WID__taxID"></td>
					</tr>
					<tr>
						<td class="label">Address</td>
						<td class="value" id="__WID__address"></td>
					</tr>
					<tr>
						<td class="label">Telephone</td>
						<td class="value" id="__WID__telephone"></td>
					</tr>
					<tr>
						<td class="label">Email</td>
						<td class="value" id="__WID__email"></td>
					</tr>
					<tr>
						<td class="label">Number of employees</td>
						<td class="value" id="__WID__employees"></td>
					</tr>
					<tr>
						<td class="label">Annual turnover</td>
						<td class="value" id="__WID__annualTurnover"></td>
					</tr>
					<tr>
						<td class="label">Description of field</td>
						<td class="value" id="__WID__description"></td>
					</tr>
				</tbody>
			</table>
		</div>
	</content>

	<topic name="AutoMicrosite.Table.OrganizationData" type="object" subscribe="true">
		<description>
			Show organization data in a table
		</description>
		<property name="legalName" datatype="string" required="true" urlparam="http://schema.org/legalName" /><!-- organizationName -->
		<property name="taxID" datatype="string" required="true" urlparam="http://schema.org/taxID" /><!-- registrationCode -->
		<property name="address" datatype="string">
			<property name="addressCountry" datatype="string" required="true" urlparam="http://schema.org/addressCountry" /><!-- officeAddress.countryCode -->
			<property name="addressRegion" datatype="string" required="true" urlparam="http://schema.org/addressRegion" /><!-- officeAddress.countyName -->
			<property name="postalCode" datatype="string" required="true" urlparam="http://schema.org/postalCode" /><!-- officeAddress.postalCode -->
			<property name="addressLocality" datatype="string" required="true" urlparam="http://schema.org/addressLocality" /><!-- officeAddress.cityName -->
			<property name="streetAddress" datatype="string" required="true" urlparam="http://schema.org/streetAddress" /><!-- officeAddress.streetPart -->
		</property>
		<property name="telephone" datatype="string" required="true" urlparam="http://schema.org/telephone" /><!-- phoneNumber -->
		<property name="email" datatype="string" required="true" urlparam="http://schema.org/email" /><!-- emailAddress -->
		<property name="employees" datatype="string" required="true" urlparam="http://schema.org/employees" /><!-- numberOfEmployees.upperBound -->
		<property name="annualTurnover" datatype="string" required="true" urlparam="http://automicrosite.maesalu.com/annualTurnover" /><!-- annualTurnover.upperBound -->
		<property name="foundingDate" datatype="string" required="true" urlparam="http://schema.org/foundingDate" /><!-- registrationDate -->
		<property name="description" datatype="string" required="true" urlparam="http://schema.org/description" /><!-- organizationDescription -->
	</topic>

	<categories>
		<category x:iri="http://schema.org/Table" />
		<category x:iri="http://schema.org/AboutPage" />
    </categories>

</widget>