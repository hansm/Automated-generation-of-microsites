<?xml version="1.0" encoding="UTF-8"?>
<widget name="GoogleMapsWidget" id="AutoMicrosite/GoogleMapsWidget"
		spec="1.0" width="640" height="480" jsClass="AutoMicrosite.Widget.GoogleMaps"
		xmlns:x="http://automicrosite.maesalu.com/OpenAjaxMetadataExtension"
		xmlns="http://openajax.org/metadata">

	<library name="jQuery" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/" version="1.7.1">
		<require type="javascript" src="jquery.min.js"/>
	</library>

	<require type="javascript" src="GoogleMaps.js"></require>
	<require type="javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;sensor=false"></require>

	<content>
		<div id="__WID__map" style="width:100%;height:10%;"></div>
	</content>

	<topic name="AutoMicrosite.GoogleMaps" type="object" subscribe="true">
		<description>
			Show an address on a Google map
		</description>
		<example><![CDATA[
			{"countryCode": "EE",
				"county": "Tartumaa",
				"city": "Tartu",
				"street": "Juhan Liivi 2",
				"postalCode": "50409"}
		]]></example>
		<property name="countryCode" datatype="string" urlparam="http://schema.org/PostalAddress#addressCountry" />
		<property name="county" datatype="string" urlparam="http://schema.org/PostalAddress#addressRegion" />
		<property name="city" datatype="string" urlparam="http://schema.org/PostalAddress#addressLocality" />
		<property name="street" datatype="string" urlparam="http://schema.org/PostalAddress#streetAddress" />
		<property name="postalCode" datatype="string" urlparam="http://schema.org/PostalAddress#postalCode" />
	</topic>

	<categories>
		<category x:iri="http://schema.org/Map" />
    </categories>

</widget>
